{
  "name": "loghandler",
  "version": "0.2.1",
  "description": "Fully tested and strongly typed flexible Log Handler for all NodeJS projects.",
  "main": "lib/index",
  "types": "lib/index",
  "typescript": {
    "definition": "lib/index"
  },
  "repository": "https://github.com/michelbitter/LogHandler",
  "author": "Michel Bitter <michel+opensource@michelbitter.nl>",
  "license": "MIT",
  "keywords": [
    "log",
    "logging",
    "nodeJS",
    "javascript",
    "typescript",
    "syslog",
    "errorlog"
  ],
  "files": [
    "lib"
  ],
  "dependencies": {
    "joi": "^13.0.2",
    "lodash": "^4.17.4"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "html",
      "text"
    ],
    "cache": false,
    "report-dir": "./coverage",
    "exclude": [
      "src/Tests/**/**"
    ],
    "require": [
      "ts-node/register"
    ],
    "extension": [
      ".ts"
    ]
  },
  "typings": [
    "./node_modules/@types",
    "./@typesCustom"
  ],
  "quokka": {
    "env": "dev",
    "ts": {
      "path": "./node_modules/typescript/bin/tsc"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/faker": "^4.1.2",
    "@types/joi": "^13.0.3",
    "@types/lodash": "^4.14.91",
    "@types/mocha": "^2.2.47",
    "@types/node": "^8.5.2",
    "@types/sinon": "^4.1.2",
    "chai": "^4.1.2",
    "faker": "^4.1.0",
    "mocha": "^4.1.0",
    "mocha-junit-reporter": "^1.15.0",
    "mocha-multi": "^1.0.0",
    "nodemon": "^1.14.5",
    "nyc": "^11.4.1",
    "prettier": "1.10.2",
    "prettier-stylelint": "^0.4.2",
    "rimraf": "^2.6.2",
    "sinon": "^4.1.3",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.7.0",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.7.1",
    "tslint-react": "^3.5.1"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "build": "./node_modules/.bin/rimraf ./lib && ./node_modules/.bin/tsc",
    "lint": "./node_modules/tslint/bin/tslint -c ./tslint.json --format stylish \"./src/**/*.ts{,x}\" || exit 0",
    "test": "NODE_ENV=testing ./node_modules/.bin/_mocha src/Tests/**/*.test.ts --require ts-node/register --recursive --prof --ui tdd --throw-deprecation -R mocha-multi --reporter-options mocha-junit-reporter=-,spec=-",
    "coverage": "nyc npm test",
    "dev": "./node_modules/nodemon/bin/nodemon.js --config ./.nodemoncfg -x \"(reset && npm run lint && npm run coverage ) || exit 1\""
  }
}
