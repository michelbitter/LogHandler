{
  "name": "loghandler",
  "version": "1.1.9",
  "description": "Fully tested and strongly typed flexible Log Handler for all NodeJS projects.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "typescript": {
    "definition": "lib/index.d.ts"
  },
  "repository": "https://github.com/michelbitter/LogHandler",
  "author": "Michel Bitter <michel+opensource@michelbitter.nl>",
  "license": "MIT",
  "keywords": [
    "log",
    "logging",
    "nodeJS",
    "javascript",
    "typescript",
    "syslog",
    "errorlog"
  ],
  "files": [
    "lib"
  ],
  "dependencies": {
    "@types/hapi__joi": "17.1.0",
    "@types/lodash": "4.14.150",
    "@hapi/joi": "17.1.1",
    "colors": "1.4.0",
    "lodash": "4.17.15"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "html",
      "text"
    ],
    "cache": false,
    "report-dir": "./coverage",
    "exclude": [
      "src/tests/**/**"
    ],
    "require": [
      "ts-node/register"
    ],
    "extension": [
      ".ts"
    ]
  },
  "quokka": {
    "env": "dev",
    "ts": {
      "path": "./node_modules/typescript/bin/tsc"
    }
  },
  "devDependencies": {
    "@types/chai": "4.2.11",
    "@types/faker": "4.1.11",
    "@types/mocha": "7.0.2",
    "@types/node": "13.13.5",
    "@types/sinon": "9.0.0",
    "chai": "4.2.0",
    "codacy-coverage": "3.4.0",
    "faker": "4.1.0",
    "mocha": "7.1.2",
    "mocha-junit-reporter": "1.23.3",
    "mocha-lcov-reporter": "1.3.0",
    "mocha-multi": "1.1.3",
    "nodemon": "2.0.3",
    "nyc": "15.0.1",
    "prettier": "2.0.5",
    "prettier-stylelint": "0.4.2",
    "rimraf": "3.0.2",
    "sinon": "9.0.2",
    "snyk": "1.319.2",
    "ts-node": "8.10.1",
    "tslint": "6.1.2",
    "tslint-config-airbnb": "5.11.2",
    "tslint-config-prettier": "1.18.0",
    "tslint-react": "5.0.0",
    "typescript": "3.8.3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "prepublish": "npm run build",
    "build": "npm run tsLint && npm run coverage && ./node_modules/.bin/rimraf ./lib && ./node_modules/.bin/tsc",
    "tsLint": "./node_modules/tslint/bin/tslint -c ./tslint.json --format stylish \"./src/**/*.ts{,x}\" || exit 0",
    "deleteTestResults": "(rm -rf ./coverage & rm -rf ./test-results.xml)",
    "test": "snyk test && NODE_ENV=testing ./node_modules/.bin/_mocha src/tests/**/**/**.test.ts --require ts-node/register --recursive --prof --ui tdd --throw-deprecation ",
    "coverage": "npm run deleteTestResults && nyc npm test -R mocha-multi --reporter-options mocha-junit-reporter=-,spec=-",
    "test-with-coverage": "npm run deleteTestResults && nyc --reporter=lcovonly npm test && cat ./coverage/lcov.info | codacy-coverage && rm -rf ./coverage",
    "dev": "./node_modules/nodemon/bin/nodemon.js --config ./.nodemoncfg -x \"(reset &&  yarn build) || exit 1\""
  }
}
