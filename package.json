{
  "name": "loghandler",
  "version": "1.0.2",
  "description": "Fully tested and strongly typed flexible Log Handler for all NodeJS projects.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "typescript": {
    "definition": "lib/index.d.ts"
  },
  "repository": "https://github.com/michelbitter/LogHandler",
  "author": "Michel Bitter <michel+opensource@michelbitter.nl>",
  "license": "MIT",
  "keywords": [
    "log",
    "logging",
    "nodeJS",
    "javascript",
    "typescript",
    "syslog",
    "errorlog"
  ],
  "files": [
    "lib"
  ],
  "dependencies": {
    "joi": "^13.4.0",
    "lodash": "^4.17.10"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "html",
      "text"
    ],
    "cache": false,
    "report-dir": "./coverage",
    "exclude": [
      "src/tests/**/**"
    ],
    "require": [
      "ts-node/register"
    ],
    "extension": [
      ".ts"
    ]
  },
  "typings": [
    "./node_modules/@types",
    "./@typesCustom"
  ],
  "quokka": {
    "env": "dev",
    "ts": {
      "path": "./node_modules/typescript/bin/tsc"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/faker": "^4.1.2",
    "@types/joi": "^13.4.0",
    "@types/lodash": "^4.14.112",
    "@types/mocha": "^2.2.47",
    "@types/node": "^8.10.21",
    "@types/sinon": "^4.3.3",
    "chai": "^4.1.2",
    "codacy-coverage": "^3.0.0",
    "faker": "^4.1.0",
    "mocha": "^4.1.0",
    "mocha-junit-reporter": "^1.15.0",
    "mocha-lcov-reporter": "^1.3.0",
    "mocha-multi": "^1.0.0",
    "nodemon": "^1.18.3",
    "nyc": "^11.9.0",
    "prettier": "1.10.2",
    "prettier-stylelint": "^0.4.2",
    "rimraf": "^2.6.2",
    "sinon": "^4.5.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.13.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2",
    "snyk": "^1.89.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "build": "npm run tsLint && npm run coverage && ./node_modules/.bin/rimraf ./lib && ./node_modules/.bin/tsc",
    "tsLint": "./node_modules/tslint/bin/tslint -c ./tslint.json --format stylish \"./src/**/*.ts{,x}\" || exit 0",
    "deleteTestResults": "(rm -rf ./coverage & rm -rf ./test-results.xml)",
    "test": "snyk test && NODE_ENV=testing ./node_modules/.bin/_mocha src/tests/**/**/**.test.ts --require ts-node/register --recursive --prof --ui tdd --throw-deprecation ",
    "coverage": "npm run deleteTestResults && nyc npm test -R mocha-multi --reporter-options mocha-junit-reporter=-,spec=-",
    "test-with-coverage": "npm run deleteTestResults && nyc --reporter=lcovonly npm test && cat ./coverage/lcov.info | codacy-coverage && rm -rf ./coverage",
    "dev": "./node_modules/nodemon/bin/nodemon.js --config ./.nodemoncfg -x \"(reset &&  yarn build) || exit 1\""
  }
}
