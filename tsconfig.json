{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "classic",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2017",
    "outDir": "./lib",
    "declaration": true,
    "diagnostics": false,
    "alwaysStrict": true,
    "allowJs": false,
    "pretty": true,
    "noEmitOnError": true,
    "rootDir": "src",
    "preserveConstEnums": true
  },
  "exclude": ["node_modules", "public"],
  "include": ["./test/**/*.d.ts", "./src/**/*.ts", "**/*.ts"],
  "types": ["node", "mocha", "chai"],
  "typeRoots": ["@CustomTypes", "node_modules/@types"]
}
